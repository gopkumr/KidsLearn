<MudStack Row="true">
    @foreach (char ch in WordToRender)
    {
        <MudPaper Class="pa-3">
            @if (TypedSoFar.Contains(ch))
            {
                <MudText Typo="Typo.h4">@ch.ToString()</MudText>
            }
            else
            {
                <MudIcon Icon="@Icons.Material.Filled.HorizontalRule" Title="Dash" />
            }
        </MudPaper>
    }
</MudStack>

@code {
    [Parameter]
    public string WordToRender { get; set; } = "";

    [Parameter]
    public char TypedCharacter
    {
        set
        {
            TypedSoFar = TypedSoFar + value;
        }
    }

    [Parameter]
    public string TypedSoFar
    {
        get; set;
    } = "";

    [Parameter]
    public bool WordCompleted { get; set; } = false;

    [Parameter]
    public EventCallback<bool> WordCompletedChanged { get; set; }

}
