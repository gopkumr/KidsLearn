@page "/"


<MudGrid Class="mt-8 ml-5">
    <MudItem xs="12" sm="6" md="4">
        <MudCard Elevation="25" Class="rounded-lg pb-4">
            <MudCardMedia Image="img/dictation.jpg" Height="200" />
            <MudCardContent>
                <MudText Typo="Typo.h5">Dictation</MudText>
                <MudText Typo="Typo.body2"> Hear the word and type the correct spelling in the textbox.</MudText>
                <MudText Typo="Typo.body2">You have options to hear the meaning of the word and use the word in a sentence.</MudText>
            </MudCardContent>
            <MudCardActions>
                <MudButton Variant="Variant.Text" Color="Color.Primary" Link="/dictation">Start Now</MudButton>
            </MudCardActions>
        </MudCard>
    </MudItem>
    <MudItem xs="12" sm="6" md="4">
        <MudCard Elevation="25" Class="rounded-lg pb-4">
            <MudCardMedia Image="img/hangman.jpg" Height="200" />
            <MudCardContent>
                <MudText Typo="Typo.h5">Hangman</MudText>
                <MudText Typo="Typo.body2"> Guess the word by trying different english alphabets.</MudText>
                <MudText Typo="Typo.body2">You get 8 chances before the stick man is hung and you fail the round.</MudText>
            </MudCardContent>
            <MudCardActions>
                <MudButton Variant="Variant.Text" Color="Color.Primary" Link="/hangman">Start Now</MudButton>
            </MudCardActions>
        </MudCard>
    </MudItem>
</MudGrid>
